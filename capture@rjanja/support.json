{
   "camera": {
      "cinnamon": {
         "enabled": true,
         "title": "Cinnamon Screenshot"
      },
      "gnome-screenshot": {
         "enabled": true,
         "title": "Default",
         "supported": {
            "area": "--area",
            "current-window": "-d {DELAY} --window",
            "screen": "-d {DELAY}"
         },
         "custom": {
            "Interactive": "gnome-screenshot -i"
         }
      },
      "shutter": {
         "enabled": true,
         "title": "Shutter",
         "-cursor-on": "-c",
         "-cursor-off": "-C",
         "-append": "-p test -e {CURSOR} -d {DELAY} --min_at_startup --disable_systray -e",
         "supported": {
            "menu": "--menu",
            "tooltip": "--tooltip",
            "window-section": "--section",
            "area": "--select",
            "current-window": "--active",
            "window": "--window",
            "screen": "--full"
         }
      },
      "xwd": {
         "enabled": false,
         "title": "XWD",
         "-append": " | convert - capture.png",
         "supported": {
            "window": "",
            "screen": " --root"
         }
      }
   },
   "recorder": {
      "cinnamon": {
        "title": "Cinnamon Recorder",
        "enabled": true
      },
      "ffmpeg": {
        "title": "FFmpeg",
        "enabled": true,
        "-append": "-s $( xdpyinfo | grep 'dimensions:' | awk '{print $2}' ) -r 30 -qscale 1  -i :0.0 \"$HOME/Videos/$( date +'%b.%d_%I:%M%#p' ).mkv\"",
        "custom": {
          "Record app with sound": "-f x11grab -f alsa -ac 2 -i pulse",
          "Record app without sound": "-f x11grab",
          "Record screen with sound": "-f alsa -ac 2 -i pulse",
          "Record screen without sound": "",
          "Stop recording": "killall ffmpeg"
        }
      },
      "gtk-recordmydesktop": {
        "title": "Record My Desktop",
        "enabled": true,
        "custom": {
          "Open recorder": ""
        }
      }
   }
}
